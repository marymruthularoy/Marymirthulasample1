@model Marymirthulasample1.Models.Register_table

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/shared/_LayoutHome1.cshtml";
}

<h2>Login</h2>
@if (TempData["Message"] != null)
{

    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
        @TempData["Message"].ToString()
    </div>

}
<form class="form-horizontal f1" id="login-form" method="post" action="@Url.Content("/Home/Login/")">
    <div class="form-group form-primary">
        <label class="float-label">Username</label>
        <input type="text" id="userName" name="userName" class="form-control" placeholder="user name" required="required" autofocus="autofocus">
        <span class="form-bar"></span>

    </div>
    <div class="form-group form-primary">

        <label class="float-label">Password</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Password" required="required">
        <span class="form-bar"></span>
    </div>
    <div class="row m-t-30">
        <div class="col-md-12">
            <button type="submit" value="Login" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20" style="background-color: #d91f27; border-color: white;">LOGIN</button>

        </div>
    </div>
</form>